{
  "hosting": [
    {
      "target": "testing",
      "public": "build",
      "cleanUrls": true,
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/**/*.html",
          "destination": "/200.html"
        }
      ],
      "redirects": [
        {
          "source": "/storage/:path*",
          "destination": "https://firebasestorage.googleapis.com/v0/b/wedevelop-site.appspot.com/o/:path",
          "type": 302
        }
      ],
      "headers": [
        {
          "source": "/**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache, no-store, must-revalidate"
            }
          ]
        },
        {
          "source": "/static/**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=2592000, immutable"
            }
          ]
        }
      ]
    },
    {
      "target": "production",
      "public": "build",
      "cleanUrls": true,
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/**/*.html",
          "destination": "/200.html"
        }
      ],
      "redirects": [
        {
          "source": "/storage/:path*",
          "destination": "https://firebasestorage.googleapis.com/v0/b/wedevelop-site.appspot.com/o/:path",
          "type": 302
        }
      ],
      "headers": [
        {
          "source": "/**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache, no-store, must-revalidate"
            }
          ]
        },
        {
          "source": "/static/**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=2592000, immutable"
            }
          ]
        }
      ]
    }
  ],
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
